<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f70ceeee"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/cv1"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="20dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/cloudbased"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cloud based"
                    android:id="@+id/textView11"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="123dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find your home at the click of a butoon"
                    android:id="@+id/textView12"
                    android:layout_marginTop="153dp"
                    android:layout_gravity="center_horizontal"

                    />



            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/cv2"
                android:id="@+id/cv3"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="20dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/fast"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Fast"
                    android:id="@+id/textView15"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="123dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Let your keywords guide your search, specify only what you need and find the perfect home."
                    android:id="@+id/textView16"
                    android:layout_marginTop="153dp"
                    android:layout_gravity="center_horizontal"

                    />



            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@+id/cv1"
                android:id="@+id/cv2"
                app:cardElevation="20dp"
                app:cardCornerRadius="15dp"
                android:layout_marginBottom="20dp"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/convinient"
                    android:layout_alignParentTop="true"
                    android:layout_gravity="center_horizontal" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Convinient"
                    android:id="@+id/textView14"
                    android:layout_gravity="center_horizontal"

                    android:layout_marginTop="123dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Find your home at the click of a butoon"
                    android:id="@+id/textView13"
                    android:layout_marginTop="153dp"
                    android:layout_gravity="center_horizontal"

                    />



            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ok Got It"
                android:id="@+id/button6"
                android:layout_alignParentBottom="true"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
        </RelativeLayout>
    </ScrollView>




</RelativeLayout>