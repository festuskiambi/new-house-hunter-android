<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#f70ceeee"
    android:padding="10dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView">
        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:id="@+id/cv1"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView2"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/cloudbased"
                    android:layout_alignParentTop="true"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Cloud based"
                    android:layout_below="@+id/imageView2"
                    android:id="@+id/textView11"
                    android:layout_centerHorizontal="true"

                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Get the latest listings in real time"
                    android:id="@+id/textView12"
                    android:layout_below="@+id/textView11"
                    android:layout_centerHorizontal="true"

                    />
                </RelativeLayout>


            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:layout_below="@+id/cv1"
                android:id="@+id/cv2"
                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_height="100dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/convinient"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Convinient"
                    android:id="@+id/textView14"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/imageView3"
                     />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Specify only what you need and find the perfect home."
                    android:id="@+id/textView13"
                     android:layout_below="@+id/textView14"
                    android:layout_centerHorizontal="true"

                    />

                 </RelativeLayout>

            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/cv2"
                android:id="@+id/cv3"

                app:cardElevation="5dp"
                app:cardCornerRadius="5dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_height="100dp"
                        android:id="@+id/imageView4"
                        android:src="@drawable/fast"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Fast"
                        android:layout_centerHorizontal="true"
                        android:id="@+id/textView15"
                        android:layout_below="@+id/imageView4"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Find your home at the click of a butoon"
                        android:id="@+id/textView16"
                        android:layout_marginLeft="15dp"
                        android:layout_below="@+id/textView15"
                        android:layout_centerHorizontal="true"

                        />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="Ok Got It"
                android:layout_marginTop="5dp"
                android:background="#f7a0eedc"
                android:id="@+id/ok"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/cv3"
                android:textColor="#ff000000" />
        </RelativeLayout>
    </ScrollView>




</RelativeLayout><!-- From: file:/home/festus/AndroidStudioProjects/Mynewhome/ParseStarterProject/res/layout/activity_why_us.xml -->