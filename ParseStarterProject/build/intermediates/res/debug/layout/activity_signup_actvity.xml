<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/building1"
    tools:context="com.parse.starter.UserHouSearchActivity">
    <include layout="@layout/toolbar"
        />



    <LinearLayout
        android:id="@+id/registration_ly"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="56dp"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/registration_main"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="30dip"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/registration_Title"
                android:layout_width="fill_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textSize="22sp"
                android:textColor="#ff000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/username"
                style="@style/EditTextStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:maxLength="15"
                android:background="@drawable/input"
                android:hint="username"
                android:inputType="text"
                android:paddingLeft="10dip"
                android:singleLine="true" />




            <EditText
                android:id="@+id/email"
                style="@style/EditTextStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:maxLength="50"
                android:inputType="textEmailAddress"
                android:background="@drawable/input"
                android:hint="Email eg.example@gmail.com"
                android:paddingLeft="10dip"
                android:singleLine="true" />

            <EditText

                style="@style/EditTextStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:maxLength="15"
                android:id="@+id/password"
                android:background="@drawable/input"
                android:hint="password"
                android:inputType="textPassword"
                android:paddingLeft="10dip"
                android:singleLine="true" />
            <EditText
                android:id="@+id/confirmpassword"
                style="@style/EditTextStyle"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dip"
                android:maxLength="15"
                android:background="@drawable/input"
                android:hint="Reenter your password"
                android:inputType="textPassword"
                android:paddingLeft="10dip"
                android:singleLine="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/registration_main"
            android:layout_marginLeft="40dip"
            android:layout_marginRight="40dip"
            android:layout_marginTop="20dip"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:id="@+id/submit1"
                android:layout_width="match_parent"
                android:text="Submit"
                android:layout_height="50dip"
                android:layout_marginRight="10dip"
                android:background="#f797ee50"
                android:paddingBottom="5dip"
                />

        </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>


</RelativeLayout>

